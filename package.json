{
  "name": "nbp",
  "version": "0.0.1",
  "description": "Nodejs Boilerplate CLI",
  "main": "index.js",
  "scripts": {
    "start": "tsc --watch",
    "dev": "nodemon ./bin/index.js",
    "dev:args": "node ./bin/index.js generate component",
    "install:cli": "npm i -g .",
    "install:deps": "npm i",
    "install:project": "npm run install:deps && tsc && npm run install:cli"
  },
  "author": "Maksym Mezko",
  "license": "ISC",
  "bin": {
    "nbp": "./bin/index.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "nodemon": "^2.0.18",
    "typescript": "^4.7.4"
  }
}
